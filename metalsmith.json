{
  "source": "src",
  "destination": "build",
  "plugins": {
    "metalsmith-drafts": false,
    "metalsmith-markdown": {
      "smartypants": true,
      "gfm": true,
      "tables": true
    },
    "metalsmith-layouts":{
  		"engine": "handlebars",
    	"directory": "templates",
      "partials": "partials"
    },
    "metalsmith-sass": {
      "outputStyle": "expanded",
      "outputDir": "css/"
    }
  }
}
